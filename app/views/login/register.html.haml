.container-fluid
  - if @reg_failed then
    .row.alert.alert-danger
      %p
        %span.glyphicon.glyphicon-exclamation-sign= " #{@reg_fail_message}"
  .row
    %h2 Please select your username (login) and password
  .row
    %form{action: "register", method: "POST"}
      .well.well-lg
        %input{type: "text", name: "login", placeholder: "Username"}
        %br
        %input{type: "password", name: "password", placeholder: "Password"}
        %br
        %input{type: "password", name: "confirm", placeholder: "Confirm password"}
      %input.btn.btn-primary{type: "submit", name: "submit", value: "Confirm"}
      %input.btn.btn-default{type: "submit", name: "submit", value: "Back"}